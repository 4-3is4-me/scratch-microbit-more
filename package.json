{
  "name": "scratch-microbit-more",
  "version": "0.5.0",
  "description": "Full-functional extension of micro:bit for Scratch3",
  "module": "./dist/microbitMore.mjs",
  "scratchExtension": {
    "block": "./dist/microbitMore.mjs",
    "entry": "./dist/microbitMore.entry.mjs"
  },
  "scripts": {
    "setup:dev": "node ./scripts/setup-dev.js",
    "build:dev": "rimraf ./build && mkdirp ./build && node build.js --name=microbitMore --block=\"./src/block\" --entry=\"./src/entry\" --vm=\"../scratch-vm\" --gui=\"../scratch-gui\" --output=\"./build\"",
    "build:dist": "rimraf ./dist && mkdirp ./dist && node build.js --name=microbitMore --block=\"./src/block\" --entry=\"./src/entry\" --vm=\"../scratch-vm\" --gui=\"../scratch-gui\" --output=\"./dist\"",
    "install:dev": "node ./install.js --gui=\"../scratch-gui\" --url=\"http://127.0.0.1:5500/build/microbitMore.mjs\"",
    "install:dist": "node ./install.js --gui=\"../scratch-gui\" --url=\"https://yokobond.github.io/scratch-microbit-more/dist/microbitMore.mjs\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yokobond/scratch-microbit-more.git"
  },
  "keywords": [
    "scratch",
    "microbit"
  ],
  "author": "Koji Yokokawa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yokobond/scratch-microbit-more/issues"
  },
  "homepage": "https://github.com/yokobond/scratch-microbit-more#readme",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-image": "^2.0.5",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "command-line-args": "^5.1.1",
    "fs-extra": "^9.0.1",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.11",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0"
  },
  "dependencies": {
    "eslint": "^7.9.0"
  }
}
